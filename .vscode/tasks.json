{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: Compilar Sistema Hortifruti",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\*.c", // Compilar todos os arquivos .c no diretório de trabalho
                "-o",
                "${workspaceFolder}\\output\\sistema-hortifruti.exe" // Nome do executável de saída
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilação completa do sistema hortifruti."
        }
    ],
    "version": "2.0.0"
}